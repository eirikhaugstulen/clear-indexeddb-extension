{
    "name": "Clear IndexedDB",
    "description": "Clears IndexedDB for the current site at the click of a button.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "browsingData",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }